<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fbf7ed"
    android:textColor="#000000"
    android:id="@+id/contacts_container">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/contacts_container2">

        <EditText android:id="@+id/inputSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="name"
            android:inputType="textVisiblePassword"
            android:layout_marginTop="3dp"
            android:layout_weight="0.21"
            android:gravity="center"
            android:textSize="24dp"
            android:background="#fbf7ed"
            android:textColor="#72af9c"
            android:textColorHint="#BDBDBD"/>

        <Button android:id="@+id/add_contact_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8bba9e"
            android:src="@drawable/ic_action_add_grey"/>
    </LinearLayout>

    <ListView
        android:id="@+id/contactlist"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.14"
        android:headerDividersEnabled="false"
        android:divider="#000000"
        android:textColor="#000000" >
    </ListView>

    <TextView

        android:id="@+id/emptyElement"
        android:text="no contacts"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@android:style/TextAppearance.Large"
        android:gravity="center"
        android:textColor="#FF666666"
        android:visibility="gone"/>

</LinearLayout>