<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners">

    <View
        android:layout_width="match_parent"
        android:layout_height="4.5dp"
        android:background="@drawable/round_corner_line_dialog"
        android:fitsSystemWindows="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingEnd="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingStart="1dp"
        android:paddingTop="24dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_title"
                        android:text="Add contact tutorial"
                        android:paddingLeft="2dp"
                        android:textSize="20sp"
                        android:textColor="#00a99d"
                        app:typeface="CAVIAR_DREAMS_BOLD"
                        android:paddingBottom="4dp"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_action_about_grey"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginRight="64dp"
                    android:background="@drawable/round_corner_line_dialog"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="7dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bitcoin_wallet_2"
                        android:layout_gravity="center_vertical"
                        />


                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:paddingTop="12sp"
                        android:text="Acá va la explicacion que le demos a los Fermat Users"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="20dp"
                        android:textColor="#1d1d26"
                        android:paddingRight="30dp"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad9d9"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="7dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_04"
                        android:layout_gravity="center_vertical"
                        />


                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:paddingTop="12sp"
                        android:text="Acá va la explicacion que le demos a los Extra Users"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="20dp"
                        android:textColor="#1d1d26"
                        android:paddingRight="30dp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad9d9"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginRight="16dp"
                    >
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/checkbox_not_show"
                        android:buttonTint="@color/black_overlay"
                        />
                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Dont show me this again"
                        android:layout_alignParentEnd="true"
                        android:textColor="#7c7c7c"
                        android:textSize="13dp"
                        android:layout_marginRight="32dp"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>