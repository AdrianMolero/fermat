<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dip"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:paddingTop="6dip"
        android:background="#FFFFFF"
        android:divider="#e1e1e1">


        <ImageView
            android:id="@+id/take_picture_btn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="7dip"
            android:background="@drawable/btn_new_contact_picture"
            android:src="@drawable/ic_camera_green"
            />



            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:background="@drawable/shape_section"

                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="Name"
                android:inputType="textCapWords"
                android:paddingBottom="7dip"
                android:paddingLeft="15dip"
                android:paddingRight="7dip"
                android:paddingTop="7dip"
                android:singleLine="true"
                android:textColor="#666666"

                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textStyle="normal"
                android:fontFamily="roboto"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e1e1e1"
        android:layout_alignParentBottom="true"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:divider="#e1e1e1"
        android:baselineAligned="false">

        <EditText
            android:id="@+id/txt_address"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dip"
            android:background="@drawable/shape_section"

            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="Address"
            android:inputType="textCapWords"
            android:paddingBottom="7dip"
            android:paddingLeft="15dip"
            android:paddingRight="7dip"
            android:paddingTop="7dip"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/paste_from_clipboard_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="1.5"
            android:src="@drawable/ic_action_send_now_grey" />

        <ImageView
            android:id="@+id/scan_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="1.5"
            android:src="@drawable/ic_action_camera_grey" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e1e1e1"
        android:layout_alignParentBottom="true"></View>
    <LinearLayout
        android:id="@+id/linear_create_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dip"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#efefef"
            android:text="Cancel"
            android:textColor="#666666"
            android:textSize="14sp"
            />


        <Button
            android:id="@+id/save_contact_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="#1173aa"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </LinearLayout>



</LinearLayout>