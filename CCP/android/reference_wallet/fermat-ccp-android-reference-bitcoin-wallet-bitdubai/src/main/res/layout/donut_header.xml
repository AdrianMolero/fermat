<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center"

    >

    <com.bitdubai.fermat_android_api.ui.Views.CircularProgressBar
        android:id="@+id/progress"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="matrix"
        android:layout_marginRight="5dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <!-- TODO: Update blank fragment layout -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="39.00"
                android:textSize="30dp"
                android:paddingLeft="12dp"
                android:textColor="#FFF"
                android:id="@+id/txt_balance_amount"
                android:textStyle="bold"
                />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="btc"
                android:layout_toRightOf="@+id/txt_balance_amount"
                android:layout_marginTop="15dp"
                android:textColor="#05ddd2"
                android:layout_marginLeft="2dp"
                />


        </RelativeLayout>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Available balance"
            android:textSize="17dp"
            android:textColor="#05ddd2"
            android:textStyle="italic"
            />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Touch to change"
            android:textSize="12dp"
            android:textColor="#aeb6c6"
            android:textStyle="italic"
            />
    </LinearLayout>



</FrameLayout>