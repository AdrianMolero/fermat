<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="15dp"
        >


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width= "70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="2dip"
            android:layout_marginTop="7dp">
            <ImageView android:id="@+id/profile_Image"
                android:layout_width="match_parent"
                android:src="@drawable/kid_3"
                android:scaleType="centerCrop"
                android:layout_margin="8dip"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/frame_contact_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/object_frame_1x1"
                android:layout_gravity="center"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_amount"
                android:text="1.4 BTC"
                android:textSize="18dp"
                android:textColor="#1d1d26"
                />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_contactName"
                android:text="Matias Furszyfer"
                android:textColor="#6e6e71"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_weight="1"
            >

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_notes"
                android:text="Conference ticket"
                android:textSize="12dp"
                android:textColor="#1173aa"
                />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text="03 Feb 2014"
                android:textSize="10dp"
                android:textColor="#6e6e71"/>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbccc7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingRight="15dp"
        android:background="#e3fff7"
        >


        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_total_balance"
            android:text="15 BTC"
            android:textSize="12dp"
            android:textColor="#1d1d26"
            android:layout_marginRight="10dp"/>

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_total_number_transactions"
            android:text="5 Records"
            android:textSize="12dp"
            android:textColor="#1173aa"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView_see_all_transactions"
            android:src="@drawable/ic_home_arrow_down"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbccc7"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">


        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listView_transactions"
            android:visibility="gone"></ListView>


    </FrameLayout>


</LinearLayout>