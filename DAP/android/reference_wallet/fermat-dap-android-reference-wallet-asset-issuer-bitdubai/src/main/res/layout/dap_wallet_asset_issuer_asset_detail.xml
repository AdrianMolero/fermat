<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#828A95"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:id="@+id/asset_image_detail"
            android:src="@drawable/img_asset_without_image"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#1affffff">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetDetailNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Asset Name"
                android:fontFamily="regular"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetDetailAvailableText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="500"
                android:fontFamily="normal"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/assetDetailNameText"
                android:paddingLeft="15dp"
                android:layout_alignParentLeft="true"
                android:paddingTop="10dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Available"
                android:fontFamily="light"
                android:textSize="15sp"
                android:textColor="#b3ffffff"
                android:layout_alignBottom="@+id/assetDetailAvailableText"
                android:layout_toRightOf="@+id/assetDetailAvailableText"
                android:paddingLeft="15dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetDetailBookText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="300"
                android:fontFamily="normal"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/assetDetailAvailableText"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Book"
                android:id="@+id/textView2"
                android:fontFamily="light"
                android:textSize="15sp"
                android:textColor="#b3ffffff"
                android:layout_alignBottom="@+id/assetDetailBookText"
                android:layout_toRightOf="@+id/assetDetailBookText"
                android:paddingLeft="15dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXP"
                android:gravity="right"
                android:fontFamily="normal"
                android:textSize="12sp"
                android:textColor="#99000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:paddingTop="15dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetDetailExpDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Dic 2015"
                android:fontFamily="normal"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_below="@id/textView7"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.000002 BTC"
                android:id="@+id/assetDetailBtcText"
                android:fontFamily="light"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/assetDetailRemainingLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetDetailRemainingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94 Assets Remaining"
                android:layout_centerInParent="true"
                android:fontFamily="regular"
                android:textSize="17sp"
                android:textColor="#00aeef"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_delivery_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_detail_divider"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/assetDetailAvailableLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/assetDetailAvailableText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="regular"
                    android:textSize="18sp"
                    android:textColor="#00aeef"
                    android:text="500" />

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Available"
                    android:fontFamily="regular"
                    android:textSize="17sp"
                    android:textColor="#b3ffffff" />

            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView1"
                android:src="@drawable/ic_detail_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_detail_divider"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/assetDetailRedeemText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="regular"
                    android:textSize="18sp"
                    android:textColor="#00aeef"
                    android:text="500" />

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Redeemed"
                    android:fontFamily="regular"
                    android:textSize="17sp"
                    android:textColor="#b3ffffff" />

            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_detail_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_detail_divider"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/assetDetailAppropriatedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="500"
                    android:fontFamily="regular"
                    android:textSize="18sp"
                    android:textColor="#00aeef" />

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Appropriated"
                    android:fontFamily="regular"
                    android:textSize="17sp"
                    android:textColor="#b3ffffff" />

            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_detail_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>