<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="360dp"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/asset_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@color/fab_material_white"/>

    <GridLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@color/gray">

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Asset Name"
            android:id="@+id/assetNameText"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="500"
            android:id="@+id/assetAvailableText"
            android:layout_row="1"
            android:layout_column="0" />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Available"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="1" />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="300"
            android:id="@+id/assetBookText"
            android:layout_row="2"
            android:layout_column="0" />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Book"
            android:id="@+id/textView5"
            android:layout_row="2"
            android:layout_column="1" />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0.2 BTC"
            android:id="@+id/assetBtcText"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="EXP"
            android:gravity="right"
            android:id="@+id/textView7"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="25 Dic 2015"
            android:gravity="right"
            android:id="@+id/assetExpDateText"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"/>
    </GridLayout>

</LinearLayout>