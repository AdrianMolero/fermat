<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:id="@+id/assetItem">

        <ImageView
            android:id="@+id/asset_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/img_asset_without_image"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1affffff">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Asset Name"
                android:fontFamily="regular"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetAvailableText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="500"
                android:fontFamily="normal"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/assetNameText"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Available"
                android:fontFamily="light"
                android:textSize="15sp"
                android:textColor="#b3ffffff"
                android:layout_alignBottom="@+id/assetAvailableText"
                android:layout_toRightOf="@+id/assetAvailableText"
                android:paddingLeft="15dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetBookText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="300"
                android:fontFamily="normal"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/assetAvailableText"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Book"
                android:fontFamily="light"
                android:textSize="15sp"
                android:textColor="#b3ffffff"
                android:layout_toRightOf="@+id/assetBookText"
                android:layout_alignBottom="@+id/assetBookText"
                android:paddingLeft="15dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetBtcText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.000002 BTC"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="center|bottom"
                android:layout_below="@+id/assetBookText"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXP"
                android:gravity="right"
                android:fontFamily="normal"
                android:textSize="12sp"
                android:textColor="#99000000"
                android:layout_above="@+id/assetExpDateText"
                android:layout_alignParentLeft="true"
                android:paddingRight="10dp"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/assetExpDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25 Dic 2015"
                android:gravity="right"
                android:fontFamily="normal"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"/>

        </RelativeLayout>

        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FFFFFF" />

</LinearLayout>