<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/csh_transaction_detail_background"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_width="0dip">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Type:"
                android:textColor="@color/csh_text_lightblue"
                android:textSize="@dimen/csh_regular_text_size" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/csh_transaction_details_transaction_type"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Deposit"
                android:textColor="@color/csh_text_black"
                android:textSize="@dimen/csh_regular_plus_text_size" />


        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="@color/csh_transaction_detail_hr_color"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" />


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_width="0dip">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Amount:"
                android:textColor="@color/csh_text_lightblue"
                android:textSize="@dimen/csh_regular_text_size" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:layout_width="0dip">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/csh_transaction_details_amount"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="4.039 USD"
                android:textColor="@color/csh_text_black"
                android:textSize="@dimen/csh_regular_plus_text_size" />


        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="@color/csh_transaction_detail_hr_color"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" />


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_width="0dip">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Date:"
                android:textColor="@color/csh_text_lightblue"
                android:textSize="@dimen/csh_regular_text_size" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/csh_transaction_details_date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="2015-01-03"
                android:textColor="@color/csh_text_black"
                android:textSize="@dimen/csh_regular_plus_text_size" />


        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="@color/csh_transaction_detail_hr_color"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" />


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_width="0dip">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/textView_available"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Memo:"
                android:textColor="@color/csh_text_lightblue"
                android:textSize="@dimen/csh_regular_text_size" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_width="0dip">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/csh_transaction_details_memo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="This is a memo"
                android:textColor="@color/csh_text_black"
                android:textSize="@dimen/csh_regular_plus_text_size" />


        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="@color/csh_transaction_detail_hr_color"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/linear_create_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/csh_ctd_cancel_transaction_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/csh_button_background_selector"
            android:text="Delete"
            android:textColor="@color/csh_text_white"
            android:textSize="14sp" />




        <Button
            android:id="@+id/csh_ctd_apply_transaction_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/csh_button_background_selector"
            android:text="Update"
            android:textColor="@color/csh_text_white"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
