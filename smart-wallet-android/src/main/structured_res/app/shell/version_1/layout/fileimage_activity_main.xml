<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/bottomlinear"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/usd_100"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Image to Memory"
            android:id="@+id/button" android:onClick="onMemoryClicked"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persist Image in Media"
            android:id="@+id/button2"
            android:layout_gravity="right" android:onClick="onMediaClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Binary to Memory"
            android:id="@+id/button6" android:onClick="onBinaryMemoryClicked"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persist Binary in Media"
            android:id="@+id/button7"
            android:layout_gravity="right" android:onClick="" />
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#FF666666"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text=""
            />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="432dp"
        android:layout_weight="1"
        android:id="@+id/toplinear">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"

            android:id="@+id/imageView5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Image From Memory"
            android:id="@+id/button3"
            android:layout_gravity="right" android:onClick="onFromMemoryClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Image From Media"
            android:id="@+id/button5"
            android:layout_gravity="right" android:onClick="onFromMediaClicked" />

        <TextView
            android:id="@+id/binary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#FF666666"
            android:textSize="13sp"
            android:textStyle="normal"
            android:text=""
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Binary From Memory"
            android:id="@+id/button8"
            android:layout_gravity="right" android:onClick="" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Binary From Media"
            android:id="@+id/button9"
            android:layout_gravity="right" android:onClick="" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/toplinear2">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4" />



    </LinearLayout>
</LinearLayout>