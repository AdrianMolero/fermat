<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/store_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop name"
            android:textSize="18dp"
            android:textStyle="bold|normal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="state "
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_below="@+id/shop_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/state" />
        <TextView android:id="@+id/state_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="state description"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_below="@+id/state"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp">
        <TextView android:id="@+id/shop_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="direction"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="15sp"/>
        <TextView android:id="@+id/shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="normal"/>
        <TextView android:id="@+id/shop_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone number"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="normal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>