<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_tabs_diagonal_rotated">
    <TextView android:id="@+id/search_parameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seach parameters"
        android:textSize="20sp"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"/>
            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF666666"
                android:textSize="20sp"
                android:textStyle="bold"
                android:hint="Contact name"
                android:gravity="left"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="3dip"
                android:paddingBottom="3dip"
                android:layout_alignParentBottom="true"/>
        <EditText android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#FF666666"
            android:textSize="20sp"
            android:textStyle="normal"
            android:hint="Transaction type"
            android:paddingTop="7dip"
            android:paddingLeft="7dip"
            android:paddingRight="14dip"
            android:paddingBottom="7dip"
            android:layout_gravity="end"/>
        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#FF666666"
            android:textSize="20sp"
            android:textStyle="normal"
            android:hint="Notes"
            android:paddingTop="7dip"
            android:paddingLeft="14dip"
            android:paddingRight="7dip"
            android:paddingBottom="7dip"
            android:layout_gravity="end" />
        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="14dip"
            android:paddingRight="7dip"
            android:paddingTop="7dip"
            android:paddingBottom="7dip"
            android:textColor="#FF666666"
            android:textSize="20sp"
            android:textStyle="normal"
            android:hint="Higher than $0.00"
            android:inputType="number"/>
    <EditText
        android:id="@+id/amount2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingLeft="14dip"
        android:paddingRight="7dip"
        android:paddingTop="7dip"
        android:paddingBottom="7dip"
        android:textColor="#FF666666"
        android:textSize="20sp"
        android:textStyle="normal"
        android:hint="Lower than $0.00"
        android:inputType="number"/>
</LinearLayout>