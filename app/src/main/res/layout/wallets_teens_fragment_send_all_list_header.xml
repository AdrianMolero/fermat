<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingBottom="0dip"
    android:paddingTop="0dip"
    android:gravity="end|right">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"


        >

        <ImageView
            android:id="@+id/frame_tx_record"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:scaleType="centerCrop"

            android:layout_gravity="center"
            android:background="@drawable/object_frame_3x1_filled"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"

            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip">
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="$0.00"
                    android:paddingBottom="1dip"
                    android:paddingTop="2dip"
                    android:layout_gravity="start" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:weightSum="1">
                <TextView
                    android:id="@+id/when"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="yesterday"
                    android:gravity="start" android:paddingBottom="1dip"
                    android:paddingTop="1dip"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" android:paddingBottom="2dip" android:paddingTop="2dip">

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:text="notes"
                    android:layout_gravity="start"
                    android:paddingBottom="1dip"
                    android:paddingTop="1dip"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingBottom="8dip"
                android:layout_gravity="bottom">
                <ImageView
                    android:id="@+id/icon_send_to_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_action_send_now_grey"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="11dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:onClick="onSendToContactIconClicked"

                    />
                <ImageView
                    android:id="@+id/icon_chat_over_trx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_action_replay_grey"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:onClick="onChatOverTrxIconClicked"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>