<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:background="@drawable/background_tabs_diagonal_inverted">



        <ImageView
            android:id="@+id/icon_send_to_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_send_now"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="11dp"
            android:paddingRight="0dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:onClick="onSendToContactIconClicked"

        />

        <TextView
            android:id="@+id/when"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="14dp"
            android:textSize="15sp"
            android:text="1 min ago a la 10:34 AM"
            android:gravity="right"
            android:textColor="#FFDDDDDD"
            android:layout_toRightOf="@+id/icon_send_to_contact"
            />

        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="14dp"
            android:textSize="15sp"
            android:text="Apartment rent Apartment rent"
            android:textColor="#FFDDDDDD"


            android:layout_toRightOf="@+id/when"
            android:layout_toLeftOf="@+id/amount"
            />



    <TextView
        android:id="@+id/amount"
        android:layout_width="95dp"
        android:layout_height="match_parent"

        android:paddingBottom="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="9dp"
        android:paddingTop="14dp"
        android:textSize="15sp"
        android:text="$3,300.00"
        android:gravity="right"
        android:textColor="#FFDDDDDD"


        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
