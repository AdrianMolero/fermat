<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitdubai.smartwallet" >

    <uses-sdk android:minSdkVersion="16" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".walletframework.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/burj_shield"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".walletmanager.DesktopActivity"
            android:label="@string/title_activity_blank" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragmenttransition.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".walletframework.FrameworkActivity"
            android:label="Wallet"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".walletframework.ContactsActivity"
            android:label="@string/title_activity_contacts"
            android:parentActivityName=".walletmanager.DesktopActivity"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitdubai.smartwallet.walletmanager.DesktopActivity" />
        </activity>
        <activity
            android:name=".walletframework.RequestsSentActivity"
            android:label="@string/title_activity_requests_sent"
            android:parentActivityName=".walletframework.FrameworkActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitdubai.smartwallet.walletframework.FrameworkActivity" />
        </activity>
        <activity
            android:name=".walletframework.SentDetailActivity"
            android:label="@string/title_activity_sent_detail"
            android:parentActivityName=".walletframework.FrameworkActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bitdubai.smartwallet.walletframework.FrameworkActivity" />
        </activity>
    </application>

</manifest>
